{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "typeRoots": ["./src/types"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules"]
}
